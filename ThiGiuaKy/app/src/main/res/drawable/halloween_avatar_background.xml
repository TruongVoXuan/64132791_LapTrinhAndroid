<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Màu nền gradient Halloween -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D2A2A"
                android:centerColor="#FF6D00"
                android:endColor="#1E1B1B"
                android:angle="135" />
        </shape>
    </item>

    <!-- Biên tròn cho ảnh đại diện -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4D000000" />
            <stroke
                android:width="4dp"
                android:color="#FFA500" />
        </shape>
    </item>

    <!-- Các điểm trang trí màu cam (biểu tượng bóng đèn lồng bí ngô) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF6D00" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
        <translate android:x="20dp" android:y="20dp"/>
    </item>

    <!-- Hiệu ứng bóng đổ màu đen -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1E1B1B" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
        <translate android:x="30dp" android:y="30dp"/>
    </item>

</layer-list>
