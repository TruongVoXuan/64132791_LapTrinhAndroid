<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragmentMainBtn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="3">

        <!-- Button 1 -->
        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="136dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/cBtn"
                android:layout_width="153dp"
                android:layout_height="94dp"
                android:contentDescription="C++ logo"
                android:src="@drawable/img_c" />

            <TextView
                android:layout_width="73dp"
                android:layout_height="63dp"
                android:layout_marginStart="8dp"
                android:text="C++"

                android:textColor="@android:color/holo_blue_bright"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Button 2 -->
        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="127dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/javaBtn"
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:contentDescription="Java logo"
                android:src="@drawable/img_java" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:text="Java"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Button 3 -->
        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="137dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/pythonBtn"
                android:layout_width="149dp"
                android:layout_height="113dp"
                android:contentDescription="Python logo"
                android:src="@drawable/img_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Python"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
