<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/back_profile">

    <!-- Bố cục hàng ngang cho ảnh đại diện và thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <!-- Ảnh đại diện bên trái -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avata"
        android:background="@drawable/halloween_avatar_background"
        android:elevation="8dp"
        android:layout_marginTop="8dp" />


        <!-- Phần thông tin cá nhân bên phải -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎃 VÕ XUÂN TRƯỜNG 🎃"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Ngày sinh -->
            <TextView
                android:id="@+id/birthdayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎃 Ngày sinh: 25/01/2000"
                android:textSize="16sp"
                android:textColor="#FFCC80" />

            <!-- Giới tính -->
            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👻 Giới tính: Nam"
                android:textSize="16sp"
                android:textColor="#FFCC80" />

            <!-- Địa chỉ Email -->
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📧 SĐT:0345338980"
                android:textSize="16sp"
                android:textColor="#FFCC80" />

            <!-- Địa chỉ -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠 Địa chỉ: Nha Trang - Khánh Hòa"
                android:textSize="16sp"
                android:textColor="#FFCC80" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bio TextView -->
    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="👻 Đây là một mô tả ngắn về bản thân bạn."
        android:textSize="16sp"
        android:textColor="#EEEEEE"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <!-- Platform Icons (Facebook, YouTube, Gmail) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/icon_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook Icon"
            android:layout_marginEnd="16dp"
            app:tint="#FF9800" />

        <ImageView
            android:id="@+id/icon_youtube"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/youtube"
            android:contentDescription="YouTube Icon"
            android:layout_marginEnd="16dp"
            app:tint="#FF9800" />

        <ImageView
            android:id="@+id/icon_gmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:contentDescription="Gmail Icon"
            app:tint="#FF9800" />
    </LinearLayout>

    <!-- Nút trở về màn hình chính -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔙 Trở về màn hình chính"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF6D00"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:elevation="10dp"
        android:textStyle="bold" />
</LinearLayout>
